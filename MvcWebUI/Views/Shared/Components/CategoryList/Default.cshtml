@model CategoryListViewModel
 
<h2>Kategoriler</h2>
<div class="list-group">

    @{
        var cssAllItem = "list-group-item";
        if (Model.CuurentCategory == 0)
        {
            cssAllItem += " active";
        }
        <a href="/product/index" class="@cssAllItem">Tüm Ürünler</a>

    }

    @foreach (var category in Model.Categories)
    {
        var css = "list-group-item";
        if (category.CategoryId == Model.CuurentCategory)
        {
            css += " active";
        }

        <a href="/product/index?category=@category.CategoryId" class="@css">@category.CategoryName</a>
    }
</div>